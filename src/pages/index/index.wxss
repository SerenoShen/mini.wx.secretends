/**
 *	top info
 */
.topinfo
{
	display: flex;
	flex-direction: column;
	align-items: center;
	background-color: #273b7a;
	padding: 10rpx 0 80rpx 0;
}
.topinfo .topinfo-line
{
	padding: 5rpx 0 5rpx 0;
}
.topinfo .topinfo-line-text
{
	font-size: 38rpx;
	font-weight: normal;
	color: #DDDDDD;
}




/**
 *	product
 */
.product
{
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 100rpx 0 0 0;
}
.product .logo
{
	width: 260rpx;
	height: 260rpx;
	background-size: contain;
}
.product .link-view
{
	padding: 20rpx 0 0 0;
}
.product .link-view .link-view-button
{
	background-color: #FFFFFF;
	font-size: 34rpx;
	font-weight: normal;
	color: #273b7a;
	text-decoration: underline;
}




/**
 *	main
 */
.main
{
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 140rpx 0 0 0;
}
.main .link-view
{
}
.main .link-view .link-view-button
{
	background-color: #FFFFFF;
	font-size: 50rpx;
	font-weight: normal;
	color: #273b7a;
	text-decoration: underline;
}