@import "resources/style/weui.wxss";

/**
 *	app.wxss
 */
.container
{
	width: 100%;
	height: 100%;
	padding: 0;
	background-color: #fff;
}


/************************************************************
 *	weui hijack
 ************************************************************/
.weui-btn_primary   			{ background-color: #2789ca !important; }
.weui-icon-success  			{ color: #2789ca !important; }
.weui-dialog__btn_primary		{ color: #2789ca !important; }
.weui-form-preview__btn_primary		{ color: #2789ca !important; }
.weui-picker__action:last-child		{ color: #2789ca !important; }
.weui-cells_checkbox .weui-check:checked + .weui-icon-checked:before	{ color: #2789ca !important; }
.weui-cells_radio .weui-check:checked + .weui-icon-checked:before	{ color: #2789ca !important; }

.weui-form-preview .book-preview__label	{ text-align: left !important; text-align-last: auto !important; color:#555; font-weight: bold; font-size: 18px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; width: 60%; }
.weui-form-preview .book-preview__value	{ font-size:18px; }

.page__hd			{ padding: 0 0 20px 30px; position: relative; }
.page__hd .page__title		{ text-align: left; font-size: 20px; font-weight: 400; }
.page__hd .page__desc		{ margin-top: 5px; color: #888; text-align: left; font-size: 14px; }
.page__hd .page__icon_right	{ position: absolute; right: 24px; top: 3px; }

.page__bd			{}

.weui-footer			{ max-width: 750px; width: 100%; }
.weui-mask			{ max-width: 750px; width: 100%; }
.weui-picker			{ max-width: 750px; width: 100%; }
.weui-actionsheet		{ max-width: 750px; width: 100%;margin: 0 auto;text-align: center;position:relative; }
.weui-loading_toast		{ max-width: 750px; width: 100%; }
.weui-loading_toast .weui-mask_transparent	{ max-width: 750px; width: 100%; }
